\begin{align*}
\psi(z) & =\frac{\Gamma^{\prime}(z)}{\Gamma(z)}=-\gamma+\sum_{n=0}^{\infty}\left(\frac{1}{n+1}-\frac{1}{n+z}\right)\\
\psi(1) & =-\gamma
\end{align*}

\end_inset


\begin_inset Formula 
\begin{align*}
\Gamma^{\prime}(z) & =\int_{0}^{\infty}x^{z-1}\ln(x)e^{-x}\dif x\\
\Gamma^{\prime}(1) & =\int_{0}^{\infty}\ln(x)e^{-x}\dif x=-\gamma
\end{align*}

\end_inset

