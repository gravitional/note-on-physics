\begin_inset Formula 
\[
u_{\uparrow}(p)=\frac{1}{\sqrt[4]{2}\sqrt{p^{+}}}\left(\begin{array}{c}
p^{+}+m/\sqrt{2}\\
p_{\perp}/\sqrt{2}\\
p^{+}-m/\sqrt{2}\\
p_{\perp}/\sqrt{2}
\end{array}\right),\quad u_{\downarrow}(p)=\frac{1}{\sqrt[4]{2}\sqrt{p^{+}}}\left(\begin{array}{c}
-\bar{p}_{\perp}/\sqrt{2}\\
p^{+}+m/\sqrt{2}\\
\bar{p}_{\perp}/\sqrt{2}\\
-p^{+}+m/\sqrt{2}
\end{array}\right)
\]

\end_inset


\end_layout

