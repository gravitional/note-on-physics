令
\begin_inset Formula 
\begin{align*}
 & A=\tr\left[\Gamma^{\mu}\gamma_{\mu}\right]=4\left[F_{1}\left(Q^{2}\right)+F_{2}\left(Q^{2}\right)\right]-\frac{F_{2}\left(Q^{2}\right)}{2m}\tr\left[\left(p_{2}+p_{1}\right)^{\mu}\gamma_{\mu}\right]\\
 & A=4\left[F_{1}\left(Q^{2}\right)+F_{2}\left(Q^{2}\right)\right]
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
令
\begin_inset Formula 
\begin{align*}
 & B=\tr\left[\Gamma^{\mu}\left(p_{2}+p_{1}\right)_{\mu}\right]=\tr\left[\gamma\left(p_{2}+p_{1}\right)\left[F_{1}\left(Q^{2}\right)+F_{2}\left(Q^{2}\right)\right]-\left(p_{2}+p_{1}\right)^{2}\frac{F_{2}\left(Q^{2}\right)}{2m}\right]\\
 & B=-4\left(p_{2}+p_{1}\right)^{2}\frac{F_{2}\left(Q^{2}\right)}{2m}=-4\left(2m^{2}+Q^{2}+2m^{2}\right)\frac{F_{2}\left(Q^{2}\right)}{2m}\\
