\end_layout

\begin_layout Standard
自旋
\begin_inset Formula $\frac{3}{2}$
\end_inset

粒子的自由拉氏量为：
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
\mathcal{L} & =\bar{T}_{\mu}\left(i\gamma^{\mu\nu\rho}\partial_{\rho}-m\gamma^{\mu\nu}\right)T_{\nu}\\
 & \left(i\gamma^{\mu\nu\rho}\partial_{\rho}-m\gamma^{\mu\nu}\right)T_{\nu}=0
\end{align*}

\end_inset


\begin_inset Formula 
\[
\gamma^{\mu\nu}=\frac{1}{2}\left[\gamma^{\mu},\gamma^{\nu}\right]=-i\sigma^{\mu\nu},\qquad\gamma^{\mu\nu\rho}=\frac{1}{2}\left\{ \gamma^{\mu\nu},\gamma^{\rho}\right\} =-\frac{i}{2}\left\{ \sigma^{\mu\nu},\gamma^{\rho}\right\} 
\]

\end_inset


\begin_inset Formula 
\begin{align*}
\left(i\gamma^{\mu\nu\rho}\partial_{\rho}-m\gamma^{\mu\nu}\right)T_{\nu} & =0\\
\left(i\left(-\frac{i}{2}\right)\left\{ \sigma^{\mu\nu},\gamma^{\rho}\right\} \partial_{\rho}-m\left(-i\sigma^{\mu\nu}\right)\right)T_{\nu} & =0\\
\left(\frac{1}{2}\left\{ \sigma^{\mu\nu},\gamma^{\rho}\right\} \partial_{\rho}+im\sigma^{\mu\nu}\right)T_{\nu} & =0
\end{align*}

\end_inset

求
\begin_inset Formula $T_{\nu}$
\end_inset

的平面波解，设
\begin_inset Formula $T_{\nu}=u_{\nu}\exp\left(-ip\cdot x\right)$
\end_inset

，则
\begin_inset Formula $\partial_{\rho}T_{\nu}=-ip_{\rho}u_{\nu}$
\end_inset

，代入得到：
\begin_inset Formula 
\begin{align*}
\frac{-i}{2}\left\{ \sigma^{\mu\nu},\gamma^{\rho}\right\} p_{\rho}u_{\nu}+imu_{\nu} & =0
\end{align*}

\end_inset

使用 FeynCalc 化简得到：
\begin_inset Formula 
\begin{align}
\left(g^{\mu\nu}\left(m-\gamma.p\right)-\gamma^{\mu}\gamma^{\nu}(m-\gamma.p)+\gamma^{\nu}p^{\mu}-\gamma^{\mu}p^{\nu}\right)u_{\nu} & =0\label{eq:11}
\end{align}

\end_inset

也就是，
\begin_inset Formula 
\begin{equation}
\left(g^{\mu\nu}-\gamma^{\mu}\gamma^{\nu}\right)\left(m-\gamma.p\right)u_{\nu}=\left(\gamma^{\mu}p^{\nu}-\gamma^{\nu}p^{\mu}\right)u_{\nu}\label{eq:a}
\end{equation}

\end_inset


\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:a"
plural "false"
caps "false"
noprefix "false"

\end_inset

