\begin_layout Standard
对于重子耦合 彩虹图
\begin_inset Formula $b$
\end_inset

，它的表达式为，
\begin_inset Formula 
\begin{align*}
f_{b}^{+}\left(y\right)= & \frac{{\color{red}i^{2}}e_{B}^{q}C_{B\phi}^{2}}{f^{2}}\int\frac{\dif^{4}k}{\left(2\pi\right)^{4}}\tilde{F}\left(k\right)^{2}i\frac{1}{D_{\phi}\left(k\right)}\frac{1}{D_{B}\left(p^{\prime}-k\right)}\frac{1}{D_{B}\left(p-k\right)}\frac{M}{P^{+}}\delta\left(y-\frac{k^{+}}{p^{+}}\right)\\
\times & \bar{u}\left(p^{\prime}\right)\left(\left(\slashed{k}+\slashed{q}\right)\gamma^{5}\right)i\left[\gamma\left(p^{\prime}-k\right)+M_{B}\right]{\color{blue}\gamma^{+}}i\left[\gamma\left(p-k\right)+M_{B}\right]\left(\slashed{k}\gamma^{5}\right)u\left(p\right)
\end{align*}

\end_inset

取
\begin_inset Formula $p^{\prime}=p,q=0$
\end_inset

，得
\begin_inset Formula 
\begin{align*}
f_{b}^{+}\left(y\right)= & \frac{iC_{B\phi}^{2}\overline{\Lambda}^{8}}{f^{2}}\left(e_{B}^{q}M\right)\int\frac{\dif^{4}k}{\left(2\pi\right)^{4}}\frac{1}{D_{\Lambda}\left(k\right)^{4}D_{\phi}\left(k\right)D_{B}\left(p-k\right)^{2}}\frac{y}{k^{+}}\delta\left(y-\frac{k^{+}}{p^{+}}\right)\\
\times & \bar{u}\left(p\right)\left(\slashed{k}\gamma^{5}\right)\left[\gamma\left(p-k\right)+M_{B}\right]{\color{blue}\gamma^{+}}\left[\gamma\left(p-k\right)+M_{B}\right]\left(\slashed{k}\gamma^{5}\right)u\left(p\right)
\end{align*}

\end_inset

第二行的旋量结构，使用
\begin_inset Formula $\bar{u}Qu=\tr\left[\left(\slashed{p}+M\right)Q\right]$
\end_inset

可以化简为,
\begin_inset Formula 
\begin{align*}
\Rightarrow & 8k^{+}\left[k^{2}\left(p^{2}+MM_{B}\right)+\left(M_{B}^{2}-p^{2}\right)\left(kp\right)\right]-4p^{+}\left[-4\left(kp\right)^{2}+k^{2}\left(4\left(kp\right)+p^{2}+2MM_{B}+M_{B}^{2}\right)-k^{4}\right]\\
= & 8k^{+}\left[k^{2}M\overline{M}+\Delta\overline{M}\left(kp\right)\right]-4p^{+}\left[-4\left(kp\right)^{2}+4k^{2}\left(kp\right)+k^{2}\overline{M}^{2}-k^{4}\right]
\end{align*}

\end_inset

结合上面的
\begin_inset Formula $\frac{y}{k^{+}}\delta\left(y-\frac{k^{+}}{p^{+}}\right)$
\end_inset

，分子是
\begin_inset Formula 
\begin{align*}
\Rightarrow & \delta\left(y-\frac{k^{+}}{p^{+}}\right)\frac{y}{k^{+}}\left\{ 8k^{+}\left[k^{2}M\overline{M}+\Delta\overline{M}\left(kp\right)\right]-4p^{+}\left[-4\left(kp\right)^{2}+4k^{2}\left(kp\right)+k^{2}\overline{M}^{2}-k^{4}\right]\right\} \\
= & \delta\left(y-\frac{k^{+}}{p^{+}}\right)\left\{ 8y\left[k^{2}M\overline{M}+\Delta\overline{M}\left(kp\right)\right]-4\left[-4\left(kp\right)^{2}+4k^{2}\left(kp\right)+k^{2}\overline{M}^{2}-k^{4}\right]\right\} 
\end{align*}

\end_inset

使用代换，
\begin_inset Formula 
\begin{align*}
 & k^{2}=D_{\phi}+m_{\phi}^{2}\\
 & 2kp=k^{2}-\left(p-k\right)^{2}+M^{2}=D_{\phi}+m_{\phi}^{2}-D_{B}\left(p-k\right)-\Delta\overline{M}\\
 & M=\left(\overline{M}-\Delta\right)/2,\quad M_{B}=\left(\overline{M}+\Delta\right)/2,\quad MM_{B}=\left(\overline{M}^{2}-\Delta^{2}\right)/4
\end{align*}

\end_inset

也即把变量列表替换为
\begin_inset Formula 
\[
\left\{ D_{\phi},m_{\phi}^{2},D_{B},\overline{M},\Delta\right\} 
\]

\end_inset

得到
\begin_inset Formula 
\[
4\left[D_{B}^{2}-\left(y-2\right)\Delta\overline{M}D_{B}+\overline{M}^{2}\left(y-1\right)\left(-\Delta^{2}+D_{\phi}+m_{\phi}^{2}\right)\right]
\]

\end_inset

乘上分母，得到
\size small

\begin_inset Formula 
\[
f_{b}^{+}\left(y\right)={\color{blue}\left(4Me_{B}^{q}\right)}\frac{iC_{B\phi}^{2}\overline{\Lambda}^{8}}{\left(2\pi\right)^{4}f^{2}}\int\dif^{4}k\frac{\left[\overline{y}\overline{M}^{2}\left(\Delta^{2}-m_{\phi}^{2}-D_{\phi}\right)+\left(2-y\right)\Delta\overline{M}D_{B}+D_{B}^{2}\right]}{D_{\Lambda}\left(k\right)^{4}D_{\phi}\left(k\right)D_{B}\left(p-k\right)^{2}}\delta\left(y-\frac{k^{+}}{p^{+}}\right)
\]

\end_inset


\size default
salamu 的结果是
\begin_inset Formula 
\begin{equation}
f_{B\phi}^{\left(\text{rbw}\right)}\left(y\right)=\frac{iC_{B\phi}^{2}\overline{\Lambda}^{8}}{\left(2\pi\right)^{4}f^{2}}\int\dif^{4}k\left[\frac{\overline{y}\overline{M}^{2}\left(\Delta^{2}-m_{\phi}^{2}\right)}{D_{\phi}D_{B}^{2}D_{\Lambda}^{4}}-\frac{\overline{y}\overline{M}^{2}}{D_{B}^{2}D_{\Lambda}^{4}}+\frac{\left(2-y\right)\overline{M}\Delta}{D_{B}D_{\phi}D_{\Lambda}^{4}}+\frac{1}{D_{\phi}D_{\Lambda}^{4}}\right]\delta\left(y-\frac{k^{+}}{p^{+}}\right)\label{eq:yu_71}
\end{equation}

\end_inset


